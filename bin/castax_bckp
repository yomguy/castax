# usage:
# bckp $1 $2 $3 $4
# 
# where :
# $1 is the maximum velocity value desired at the input of the duct
# $2 is the frequency of the input velocity sinusoid
# $3 is the text file containing the 2D profile of the duct
# $4 is the directory path for backuping
# $5 is the result directory path
# -------------------------------------------------------------
#
# backuping results in $4/...
if [ ! -d $4 ]; then
        mkdir $4
fi
if [ ! -d $4/$3 ]; then
        mkdir $4/$3
fi
if [ ! -d $4/$3/$2 ]; then
        mkdir $4/$3/$2
fi
if [ ! -d $4/$3/$2/$1 ]; then
        mkdir $4/$3/$2/$1
fi
dirres=$5/$3/$2/$1
cd $dirres
cp -a restit $4/$3/$2/$1/ &
cp -a $3 $4/$3/$2/$1/ &
tar czf $4/$3/$2/$1/txt.tgz txt/ &
cp -a output.txt $4/$3/$2/$1/  &
tar czf $4/$3/$2/$1/dgibi.tgz *.dgibi &
tar czf $4/$3/$2/$1/data.tgz data.sauv &&
tar czf $4/$3/$2/$1/ps.tgz ps/ &&
cd $CASTAX
